@model IEnumerable<FlightViewModel>

@{
    ViewData["Title"] = "Index";
}
<br />
<p>
    <a class="btn btn-primary" asp-action="Create">Add new Flight</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Departure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Arrival)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlightAirline.AirlineName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartureAirportId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ArrivalAirportId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Arrival)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FlightAirline.AirlineName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.From.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.To.Name)
                </td>
                <td>
                    <a class="btn btn-default" asp-action="Edit" asp-route-id="@item.FlightId">Edit</a>  
                    <a class="btn btn-default" asp-action="Details" asp-route-id="@item.FlightId">Details</a> 
                    <a class="btn btn-default" asp-action="Delete"  asp-route-id="@item.FlightId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

